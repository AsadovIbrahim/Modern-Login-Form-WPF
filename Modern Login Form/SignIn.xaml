<Window x:Class="Modern_Login_Form.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modern_Login_Form"
        mc:Ignorable="d"
        Title="SignIn" Height="450" Width="280" Background="#3AADA1" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
           
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Email:" FontFamily="Arial Black" Foreground="#fff"/>
                <TextBlock Text="{Binding Email}" FontFamily="Arial Black" Foreground="#fff" Margin="10,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Password:" FontFamily="Arial Black" Foreground="#fff"/>
                <TextBlock Text="{Binding Password}" FontFamily="Arial Black" Foreground="#fff" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
